{
    "$schema": "http://json.schemastore.org/template",
    "author": "Nyron Williams",
    "classifications": [ "Web" ],
    "identity": "minimalendpoints",
    "name": "MinimalEndpoints Web API",
    "description": "A light weight abstraction over ASP.NET Minimal API",
    "shortName": "minimalendpoints",
    "sourceName": "MinimalEndpoints.Template",
    "preferNameDirectory":true,
    "tags": {
      "language": "C#",
      "type": "project"
    },
    "symbols": {
        "AddSwagger" :{
            "type": "parameter",
            "description": "Adds Swagger to project",
            "datatype":"bool",
            "defaultValue": "true"
        },
        "RequiresHttps":{
            "type": "parameter",
            "description": "Add https support",
            "datatype":"bool",
            "defaultValue": "true"
        },
        "PortNumber": {    
            "type": "generated",    
            "generator": "port",
            "parameters": {
              "fallback": 5000
            },
            "replaces": "{portno}"  
          },
          "SslPortNumber": {    
              "type": "generated",    
              "generator": "port",
              "parameters": {
                "fallback": 44300
              },
              "replaces": "{sslportno}"  
            }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "condition": "(!AddSwagger)",
                    "exclude": [
                        "SecureSwaggerEndpointRequirementFilter.cs"
                    ]
                }
            ]
        }
    ]
  }